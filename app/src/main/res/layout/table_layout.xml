    <TableRow
        android:layout_weight="1">
        <TextView
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"/>

        <TextView
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            android:layout_span="2"/>
    </TableRow>

</TableLayout>