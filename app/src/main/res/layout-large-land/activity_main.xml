<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment8"
        android:name="com.example.pruebas.Inicio"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/inicio" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment9"
        android:name="com.example.pruebas.Descripcion"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fragment8"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        tools:layout="@layout/descripcion" />

</RelativeLayout>